<div>
    <h1>Post</h1>

    <div>
      <a href="/users/{{post.username}}">{{post.username}}</a>
      {{post.body}}
      {{#each post.comments}}
        {{this.body}}
      {{/each}}
      
      
      <p id="likes">{{post.likes}} likes</p>
      {{!-- All of this is not working I am just writing for now --}}
      <form action="/posts/{{post._id}}/like" method="POST">
        <button type="submit" class="{{liked}}" id="like">{{liked}}</button>
      </form>
      
      {{#if (eq post.username username)}}
        <form action="/users/{{post.username}}/delete" method="POST">
          <input type="hidden" name="postToDelete" id="postToDelete" value="{{post._id}}">
          <button type="submit">Delete</button>
        </form>
      {{/if}}

      <form action="/comments/{{post._id}}" method="POST">
        <input type="text" name="body" placeholder="Comment">
        <button type="submit">Comment</button>
      </form>

      {{#each post.comments}}
        {{this.body}}
        {{#if (eq this.username username)}}
          <form action="/comments/{{this._id}}/delete" method="POST">
            <button type="submit">Delete</button>
          </form>
        {{/if}}
      {{/each}}
      {{!-- All of this is not working I am just writing for now --}}

      {{#if post.track}}
        <div class="track">
          <a href={{post.track.url}} target="_blank" rel="noopener noreferrer">Check out {{post.track.name}} by {{post.track.artist}}</a>
        </div>
      {{/if}}

      {{#if post.artist}}
        <div class="track">
          <a href={{post.artist.url}} target="_blank" rel="noopener noreferrer">Check out {{post.artist.name}}</a>
        </div>
      {{/if}}
    </div>
</div>