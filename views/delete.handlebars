<link rel="stylesheet" href="../public/css/profilepage.css"> 

<div>
    <h1>Delete Posts</h1>
    <section>
        {{#if posts}}
            <ul>
                {{#each posts}}
                <li>
                    <form method="post">
                        <input type="hidden" name="postToDelete" id="postToDelete" value="{{this._id}}">
                        <button type="submit">{{this.body}}</button>
                    </form>
                </li>
                {{/each}}
            </ul>
        {{else}}
            <p>No posts yet</p>
        {{/if}}
    </section>

    <a href="/users/{{username}}" class="backToProfile">Back to Profile Page</a>
</div>
