<link rel="stylesheet" href="../public/css/profilepage.css">

<h1>{{username}}'s' Notifications</h1>
<section>
    {{#if notifications}}
        {{#each notifications}}
            <p>{{this.notification}}</p>
            <form method="post">
                <input type="hidden" name="notificationToDelete" id="notificationToDelete" value="{{this._id}}">
                <button type="submit">Delete Notification</button>
            </form>
        {{/each}}
    {{else}}
        <p>No notifications yet</p>
    {{/if}}
</section>

<a href="/users/{{username}}" class="backToProfile">Go back to profile page</a>
